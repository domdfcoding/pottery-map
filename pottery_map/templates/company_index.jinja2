{% extends "page.jinja2" %}
{% set title = "Companies" %}
{% set root = "../" %}
{% set companies_page = True %}
{% block body %}
    <h1>{{ title }}</h1>
    <div class="row">
        <div class="col-sm-6">
            <h2>By Name</h2>
            <ul>
                {% for company, item_count in sorted(companies.company_item_counts.items()) %}
                    <li>
                        <a href='{{ make_id(company) }}.html'>{{ company }}</a> ({{ item_count }})
                        {{ defunct_dagger(company) }}
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-sm-6">
            <h2>By Parent</h2>
            <ul>
                {% for company in companies.top_level_companies %}
                    {%- include "write_company_entries.macro.jinja2" indent content -%}
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock body %}
